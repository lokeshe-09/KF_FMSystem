# Farm Management System Environment Configuration
# Copy this file to .env and customize as needed

# Django Settings
DEBUG=True
SECRET_KEY=django-insecure-your-secret-key-here-change-in-production

# Server Configuration
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,*

# Protocol Settings
USE_HTTPS=False
SECURE_SSL_REDIRECT=False

# CORS Settings
CORS_ALLOW_ALL_ORIGINS=True
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://localhost:3000,https://127.0.0.1:3000

# Database (SQLite is default, no configuration needed)
# DATABASE_URL=sqlite:///db.sqlite3

# Media and Static Files
STATIC_ROOT=staticfiles
MEDIA_ROOT=media

# For HTTPS Development (optional)
# USE_HTTPS=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True

# For Production
# DEBUG=False
# SECRET_KEY=your-super-secret-production-key
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
# USE_HTTPS=True
# SECURE_SSL_REDIRECT=True